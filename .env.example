# Application
APP_ENV=development
DEBUG=true
SECRET_KEY=change-this-to-a-random-secret-key-in-production
API_V1_PREFIX=/api/v1

# Database
DATABASE_URL=postgresql://ape_user:ape_password@localhost:5432/ape_db
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10

# LLM Providers (at least one required)
# Groq (recommended for development - fast and free)
GROQ_API_KEY=your-groq-api-key-here

# AWS Bedrock (recommended for production)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_DEFAULT_REGION=us-east-1

# OpenAI (fallback only)
OPENAI_API_KEY=your-openai-api-key

# External Services
FIRECRAWL_API_KEY=your-firecrawl-api-key

# LangSmith (optional - for tracing)
LANGCHAIN_TRACING_V2=false
LANGCHAIN_PROJECT=ape-dev
LANGCHAIN_API_KEY=your-langsmith-api-key

# Security
JWT_SECRET_KEY=change-this-jwt-secret-key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ChromaDB
CHROMA_PERSIST_DIRECTORY=./chroma_db
CHROMA_HOST=localhost
CHROMA_PORT=8001

# S3 (optional - for file storage)
S3_BUCKET_NAME=ape-files
S3_REGION=us-east-1

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Logging
LOG_LEVEL=INFO
