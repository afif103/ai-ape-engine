# ============================================
# APE PRODUCTION ENVIRONMENT VARIABLES
# ============================================
# INSTRUCTIONS:
# 1. Copy this file to .env.production on your local machine
# 2. Copy .env.production to .env on EC2 server
# 3. Replace all <REPLACE_*> placeholders with real values
# 4. NEVER commit .env.production to Git (it's in .gitignore)
# ============================================

# Application
APP_ENV=production
DEBUG=false
SECRET_KEY=<REPLACE_WITH_RANDOM_SECRET_KEY>
API_V1_PREFIX=/api/v1

# Database
POSTGRES_DB=ape_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=<REPLACE_WITH_STRONG_PASSWORD>
DATABASE_URL=postgresql://postgres:<REPLACE_WITH_STRONG_PASSWORD>@db:5432/ape_db
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_PASSWORD=<REPLACE_WITH_STRONG_PASSWORD>
REDIS_URL=redis://:<REPLACE_WITH_STRONG_PASSWORD>@redis:6379/0
REDIS_MAX_CONNECTIONS=10

# LLM Providers
# IMPORTANT: Replace with your actual Groq API key from local .env
GROQ_API_KEY=<REPLACE_WITH_YOUR_GROQ_API_KEY>

# AWS Bedrock (optional - for future production upgrade)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_DEFAULT_REGION=us-east-1

# External Services (optional)
# FIRECRAWL_API_KEY=your-firecrawl-api-key

# LangSmith Tracing (optional)
LANGCHAIN_TRACING_V2=false
LANGCHAIN_PROJECT=ape-production
# LANGCHAIN_API_KEY=your-langsmith-api-key

# Security
JWT_SECRET_KEY=<REPLACE_WITH_RANDOM_JWT_SECRET>
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ChromaDB
CHROMA_PERSIST_DIRECTORY=/chroma/chroma
CHROMA_HOST=chroma
CHROMA_PORT=8000

# S3 (optional - for file storage)
# S3_BUCKET_NAME=ape-files
# S3_REGION=us-east-1

# CORS - IMPORTANT: Replace XX.XX.XX.XX with your EC2 Elastic IP
CORS_ORIGINS=https://ai-ape-engine-vercel.vercel.app,http://localhost:3000,http://XX.XX.XX.XX:8000

# Server
HOST=0.0.0.0
PORT=8000

# Logging
LOG_LEVEL=INFO

